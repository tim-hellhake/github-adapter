{
  "name": "github-adapter",
  "display_name": "GitHub",
  "version": "0.1.6",
  "description": "Watch the issue count of your favourite GitHub repos",
  "main": "lib/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc -p ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tim-hellhake/github-adapter.git"
  },
  "author": "Tim Hellhake",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/tim-hellhake/github-adapter/issues"
  },
  "homepage": "https://github.com/tim-hellhake/github-adapter#readme",
  "files": [
    "LICENSE",
    "SHA256SUMS",
    "lib/index.js",
    "lib/github-adapter.js",
    "manifest.json"
  ],
  "moziot": {
    "api": {
      "min": 2,
      "max": 2
    },
    "plugin": true,
    "exec": "{nodeLoader} {path}",
    "schema": {
      "type": "object",
      "required": [
        "repos"
      ],
      "properties": {
        "repos": {
          "type": "array",
          "title": "This list of repositories that should be watched",
          "items": {
            "type": "string",
            "title": "A repository (e.g. mozilla-iot/gateway)",
            "examples": [
              "mozilla-iot/gateway"
            ]
          }
        }
      }
    }
  },
  "dependencies": {
    "node-fetch": "^2.6.0"
  },
  "devDependencies": {
    "@types/node": "^13.13.5",
    "@types/node-fetch": "^2.5.7",
    "typescript": "^3.8.3"
  }
}
